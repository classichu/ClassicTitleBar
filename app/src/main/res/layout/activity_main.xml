<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.classichu.classictitlebar.MainActivity">

    <com.classichu.library.widget.ClassicTitleBar
        android:id="@+id/id_classic_title_bar"
        style="@style/ClassicTitleBar"
        app:classic_centerText="标题"
        app:classic_rightDrawable="@drawable/ic_more_vert_black_24dp" />

    <TextView
        android:id="@+id/id_tv_next"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Go To Next Aty"
        android:textSize="@dimen/classic_text_size_primary" />

</LinearLayout>
